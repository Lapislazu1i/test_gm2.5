BasedOnStyle: LLVM
IndentWidth: 4
KeepEmptyLinesAtTheStartOfBlocks:	true
AlignTrailingComments: true
AccessModifierOffset: -4
# 连续空行的最大数量
MaxEmptyLinesToKeep:	2
# 允许排序#include
SortIncludes:	true
# BreakBeforeBraces: Custom
BraceWrapping:   
  # class定义后面

  AfterClass:	true

  # 控制语句后面
  AfterControlStatement:	true
  # enum定义后面
  AfterEnum:	true
  # 函数定义后面
  AfterFunction:	true
  # 命名空间定义后面
  AfterNamespace:	true
  # ObjC定义后面
  AfterObjCDeclaration:	true
  # struct定义后面
  AfterStruct:	true
  # union定义后面
  AfterUnion:	true
  # catch之前
  BeforeCatch:	true
  # else之前
  BeforeElse:	false
  # 缩进大括号
  IndentBraces:	false
# 开始一个块的宏的正则表达式

# MacroBlockBegin: 'BEGIN'
# 结束一个块的宏的正则表达式
# MacroBlockEnd: 'END'
Language: Cpp

ForEachMacros: [ foreach, Q_FOREACH, BOOST_FOREACH ]
# Force pointers to the type for C++.
DerivePointerAlignment: false
PointerAlignment: Left
